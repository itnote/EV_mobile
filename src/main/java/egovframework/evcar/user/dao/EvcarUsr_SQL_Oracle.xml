<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="EvcarUsrDAO">

    <typeAlias alias="EvcarUsrVO" type="egovframework.evcar.user.vo.EvcarUsrVO"/>
    <typeAlias alias="UsrCardVO" type="egovframework.evcar.card.vo.UsrCardVO"/>
    <!--로그인 액션-->
    <select id="EvcarUsrDAO.loginAction" resultClass="EvcarUsrVO" parameterClass="EvcarUsrVO">
        SELECT
            USER_SNO AS userSno
           ,ACRD_CRD_NO AS acrdCrdNo
           ,USER_NM AS userNm
           ,USER_ID AS userId
           ,PWD_NO AS pwdNo
           ,USER_EMAIL AS userEmail
           ,ADDR1 AS addr1
           ,ADDR1_DTL AS addr1Dtl
           ,TEL_NO AS telNo
           ,TEL_NO2 AS telNo2
           ,CAR_CD AS carCd
           ,CAR_YEAR AS carYear
           ,CAR_NO AS carNo
           ,ENTRY_DD AS entryDd
           ,CRD_ISSUE_DD AS crdIssueDd
           ,CRD_REG_DD AS crdRegDd
           ,CRD_ACPT_DD AS crdAcptDd
           ,USE_YN AS useYn
           ,REG_DT AS regDt
           ,MOD_DT AS modDt
           ,CUST_ID AS custId

            FROM CHARGER_USER
            WHERE 1=1
            AND USE_YN = 'Y'
            AND USER_ID = #userId#
            AND PWD_NO = #pwdNo#
    </select>

    <!--회원가입-->
    <insert id="EvcarUsrDAO.joinUserData" parameterClass="EvcarUsrVO">
        INSERT
        INTO CHARGER_USER (
             USER_SNO
            ,ACRD_CRD_NO
            ,USER_NM
            ,USER_ID
            ,PWD_NO
            ,USER_EMAIL
            ,ADDR1
            ,ADDR1_DTL
            ,TEL_NO
            ,TEL_NO2
            ,CAR_CD
            ,CAR_YEAR
            ,CAR_NO
            ,ENTRY_DD
            ,CRD_ISSUE_DD
            ,CRD_REG_DD
            ,CRD_ACPT_DD
            ,USE_YN
            ,REG_DT
            ,CUST_ID
        )
        VALUES
        (
             #userSno#
            ,#acrdCrdNo#
            ,#userNm#
            ,#userId#
            ,#pwdNo#
            ,#userEmail#
            ,#addr1#
            ,#addr1Dtl#
            ,#telNo#
            ,#telNo2#
            ,#carCd#
            ,#carYear#
            ,#carNo#
            ,NOW()
            ,#crdIssueDd#
            ,#crdRegDd#
            ,#crdAcptDd#
            ,'Y'
            ,NOW()
            ,#custId#
        )
    </insert>

    <!--회원정보로그-->
    <insert id="EvcarUsrDAO.acrdUserData" parameterClass="EvcarUsrVO">
        INSERT INTO CHARGER_ACRD(
         USER_SNO
        ,CHG_DT
        ,ACRD_CRD_NO
        )
        VALUES(
         #userSno#
        ,NOW()
        ,#acrdCrdNo#
        )
    </insert>

    <!--카드정보-->
    <update id="EvcarUsrDAO.updateUsrCard" parameterClass="UsrCardVO">
        UPDATE USR_ATH
            SET USR_CARD = #cardSno#
        WHERE 1=1
            AND USR_SNO = #usrSno#
    </update>

    <!--아이디 중복체크-->
    <select id="EvcarUsrDAO.IdCheck" resultClass="int" parameterClass="EvcarUsrVO">
        SELECT COUNT(*)
        FROM CHARGER_USER
        WHERE USER_ID = #userId#
    </select>

    <!--카드번호 중복체크-->
    <select id="EvcarUsrDAO.CardCheck" resultClass="int" parameterClass="EvcarUsrVO">
        SELECT
            COUNT(TAB1.ACRD_CRD_NO)
            FROM CHARGER_ACRD TAB1
            INNER JOIN (
            SELECT
            MAX(CHG_DT) CHG_DT,
            ACRD_CRD_NO
            FROM CHARGER_ACRD T2
            GROUP BY ACRD_CRD_NO
            ) TAB2 ON TAB1.CHG_DT = TAB2.CHG_DT
            WHERE 1=1
            AND TAB1.ACRD_CRD_NO = #acrdCrdNo#
    </select>
</sqlMap>
